<article class="item-card project-card">
  {% if badge %}
    <div class="project-badge badge-{{ badge.tone or 'accent' }}">{{ badge.text }}</div>
  {% endif %}
  <div class="item-head">
    <div>
      <h3 class="item-title">{{ title }}</h3>
      <div class="item-meta">{{ org }}{% if timeline %} - {{ timeline }}{% elif year %} - {{ year }}{% endif %}</div>
    </div>
  </div>
  {% if summary %}<p class="item-body">{{ summary }}</p>{% endif %}
  {% if outcome %}<p class="item-outcome">Outcome: {{ outcome }}</p>{% endif %}
  {% if tags %}
    <div class="tags">{% for t in tags %}<span class="tag">{{ t }}</span>{% endfor %}</div>
  {% endif %}
  {% if link %}<div class="item-actions"><a class="item-link" href="{{ link }}">Learn more -></a></div>{% endif %}
</article>
