{% set hero = profile.hero %}
<section class="hero" aria-labelledby="hero-title">
  <figure class="hero-photo">
    <img class="headshot" src="{{ site.author.headshot }}" alt="Headshot of {{ site.author.name }}">
  </figure>
  <div class="hero-copy">
    <h1 id="hero-title">{{ hero.title }}</h1>
    <p class="tagline">{{ hero.tagline }}</p>
    <p class="lede">{{ hero.lede }}</p>
    {% if hero.focus %}
      <ul class="hero-focus" role="list">
        {% for item in hero.focus %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if hero.actions %}
      <div class="cta">
        {% for action in hero.actions %}
          <a class="btn{% if action.kind == "secondary" %} ghost{% endif %}" href="{{ action.url }}">{{ action.label }}</a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>
